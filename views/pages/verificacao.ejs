<body>

    <%# Preload %>
    <%- include('../components/templates/Preload', {preload__name: 'Carregando...'}) %> 

    <div class="fundo">
        <canvas id="wallpaper"></canvas>
    </div>

    <main class="main entrar-content">
        
        <form action="/cadastrar" method="POST" id="formulario" onsubmit="return verificar()">

            <a href="/"><div class="voltar"></div></a>
            
            <a href="/">
                <h1>LabFísica</h1>
            </a>
            <label style="font-size: 0.9rem; margin-bottom: 5px; color: #16c3f7; width: 100%;">
                Um código de verificação foi enviado para o endereço:
            </label>
            <input  style="background: #53585e; color: white; pointer-events: none !important;" id="email" name="email" type="email" value="<%= email %> " readonly>
            <% if (tentativa) { %>
                <li style="color: rgba(255, 0, 0, 0.9); font-size: 0.9rem;" >
                    <%= sucesso ? 'Insira o código de verificação' : 'Código de verificação incorreto' %> 
                </li>
            <% } %>
            <input id="codigo" name="codigo" type="text" placeholder="Insira o código de verificação">

            <input class="btn-formulario" type="submit" value="Verificar"/>
        </form>

    </main>

    <script src="/js/fundo.js"></script>

    <script>
        function verificar(){

            if (document.getElementById('codigo').value == ''){
                alert("Insira o código de verificação");
                return false
            }

            return true;
        }
    </script>
