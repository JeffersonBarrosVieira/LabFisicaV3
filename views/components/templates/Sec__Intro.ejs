    <section class="section">

        <% infos.forEach(info => { %>
    
            <div class="col"  <% if (info.id) { %> id= <%= info.id %>  <% } %>>
                <%# TITLE COL %>
                <% if (info.title) { %>
                    <div class="title"  style="padding-bottom: 10px;"> <%= info.title %> </div>
                <% } %>
    
                <%# CONTENT COL %>
                <% if (info.content) { %>
                 
                    <div class="content">
                        <ul>
                            <% info.content.forEach(content => { %>
                                <li><p><%= content %></p></li>
                            <% }) %>
                        </ul>

                        <% if (info.hashtag) { %>
                            <br>
                            <%= info.hashtag %>
                        <% } %>

                    </div>
    
                <% } %>
                
                <%# QUADRO COL %>
                <% if (info.quadro) { %>
                    <div class="quadro">
                        <div id=<%= info.quadro %>  class="glowscript"> </div>
                    </div>
                <% } %>

                <% if (info.controls) { %>
                    <div class="quadro__interface" style="width: 100%; position: relative; font-size: 1.2rem;">

                        <% info.controls.forEach(element => { %>
                            <% if (element.btn) { %>
                                <button id=<%= element.btn.id %>
                                        <%#onmouseover="this.style.backgroundColor= '#54a561'"
                                        onmouseout="this.style.backgroundColor= '#61bd71'" %>
                                        style=" background-color: #61bd71;
                                                position: absolute;
                                                top: -35px;
                                                right: 2px;
                                                border: none;
                                                border-radius: 5px;
                                                font-size: 15px;
                                                padding: 5px 10px;
                                                color: #0b0d0f;
                                                cursor: pointer;">

                                                <%= element.btn.name %>
                                </button>
                            <% } %>
                            <% if (element.reset) { %>
                                <button id=<%= element.reset.id %>
                                        onmouseover="this.style.backgroundColor= '#4a5461'"
                                        onmouseout="this.style.backgroundColor= '#414a56'"
                                        style=" background-color: #414a56;
                                                border: none;
                                                border-radius: 5px;
                                                font-size: 15px;
                                                position: absolute;
                                                top: -35px;
                                                right: 60px;
                                                padding: 5px 10px;
                                                color: white;
                                                cursor: pointer;">

                                                <%= element.reset.name %>
                                </button>
                            <% } %>
                            <% if (element.follow) { %>
                                <button id=<%= element.follow.id %>
                                        style=" background-color: #414a56;
                                                border: none;
                                                border-radius: 5px;
                                                font-size: 15px;
                                                position: absolute;
                                                top: -35px;
                                                left: 4px;
                                                padding: 5px 10px;
                                                color: white;
                                                cursor: pointer;">

                                                <%= element.follow.name %>
                                </button>
                            <% } %>
                            <% if (element.input) { %>
                                
                                <%- element.input.preText ? element.input.preText : '' %> 
                                <input  id=<%= element.input.id %> 
                                        placeholder=<%= element.input.name %> 
                                        type="number" 
                                        style=" height: auto;
                                                width: 70px;
                                                background-color: #252830;
                                                margin-top: 5px;
                                                border-radius: 5px;
                                                font-size: 15px;
                                                border: none;
                                                padding: 5px 10px;"/> 
                                <%- element.input.posText ? element.input.posText : '' %> 
                            <% } %>
                        <% }) %>

                    </div>
                <% } %>

                <%# IMAGENS COL %>
                <% if (info.imgs) { %>
                    <div class="imgs">
                        <% info.imgs.forEach(url => { %>
                            <img class="img" src= "<%= url %>" >
                        <% }) %>
                    </div>
                <% } %>
    
            </div>
    
        <% }) %>
        
    </section>